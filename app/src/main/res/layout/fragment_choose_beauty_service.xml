<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:textColor="@color/pastelPurple"
        android:text="Choose your desired service"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="77dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="108dp"
        android:layout_height="43dp"
        android:background="@color/pastelPurple"
        android:text="Beauty Care"
        android:textColor="@color/ghost_white"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="256dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:background="@color/pastelPurple"
        android:textColor="@color/ghost_white"

        android:text="Makeup"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="500dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="106dp"
        android:layout_height="38dp"
        android:background="@color/pastelPurple"
        android:textColor="@color/ghost_white"

        android:text="Hair"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="381dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="108dp"
        android:layout_height="116dp"
        android:src="@drawable/skin"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="226dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hair"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="347dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/makeup"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="467dp" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flower2"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="548dp" />

</androidx.constraintlayout.widget.ConstraintLayout>