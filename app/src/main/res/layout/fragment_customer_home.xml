<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_customer_home_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/CustomerHomeFragmentChooseserviceTextview"
            android:layout_width="382dp"
            android:layout_height="30dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="623dp"
            android:autoSizeTextType="uniform"
            android:text="Choose Service"
            android:textAlignment="center"
            android:textColor="@color/darkPurple"
            app:layout_constraintBottom_toTopOf="@+id/CustomerHomeFragmentContactusButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/CustomerHomeFragmentBeautyImageview"
            android:layout_width="103dp"
            android:layout_height="91dp"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/beauty" />

        <Button
            android:id="@+id/CustomerHomeFragmentBeautyButton"
            android:layout_width="145dp"
            android:layout_height="62dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="116dp"
            android:text="Beauty "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/CustomerHomeFragmentElectronicImageview"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/CustomerHomeFragmentBeautyImageview"
            app:layout_constraintEnd_toStartOf="@+id/CustomerHomeFragmentElectronicandappliancesButton"
            app:srcCompat="@drawable/electronics" />

        <Button
            android:id="@+id/CustomerHomeFragmentElectronicandappliancesButton"
            android:layout_width="152dp"
            android:layout_height="80dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="64dp"
            android:text="ELELCTRONIC AND APPLIANCES"
            app:layout_constraintBottom_toTopOf="@+id/CustomerHomeFragmentBeautyButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/CustomerHomeFragmentTravelImageview"
            android:layout_width="150dp"
            android:layout_height="95dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/CustomerHomeFragmentElectronicImageview"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bus" />

        <Button
            android:id="@+id/CustomerHomeFragmentTravelButton"
            android:layout_width="129dp"
            android:layout_height="60dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="68dp"
            android:text="TRAVEL"
            app:layout_constraintBottom_toTopOf="@+id/CustomerHomeFragmentElectronicandappliancesButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/CustomerHomeFragmentHomeserviceImageview"
            android:layout_width="125dp"
            android:layout_height="151dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CustomerHomeFragmentChooseserviceTextview"
            app:srcCompat="@drawable/homeservice" />

        <Button
            android:id="@+id/CustomerHomeFragmentHomeserviceButton"
            android:layout_width="120dp"
            android:layout_height="99dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="100dp"
            android:text="Home service"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CustomerHomeFragmentChooseserviceTextview" />

        <Button
            android:id="@+id/CustomerHomeFragmentContactusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            android:text="Contact Us"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/CustomerHomeFragmentBeautyButton"
            app:layout_constraintTop_toBottomOf="@+id/CustomerHomeFragmentChooseserviceTextview" />

        <Button
            android:id="@+id/CustomerHomeActivityDonationButton"
            android:layout_width="91dp"
            android:layout_height="37dp"
            android:layout_marginEnd="212dp"
            android:layout_marginBottom="5dp"
            android:text="Donation"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/CustomerHomeFragmentBeautyButton"
            app:layout_constraintTop_toBottomOf="@+id/CustomerHomeFragmentChooseserviceTextview"
            app:layout_constraintVertical_bias="0.982" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>