<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.Material3.Light.NoActionBar"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/CustomerHomeFragmentChooseserviceTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="63dp"
        android:autoSizeTextType="uniform"
        android:text="Choose Service"
        android:textAlignment="center"
        android:textColor="@color/darkPurple"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/CustomerHomeFragmentBeautyImageview"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/beauty" />

        <Button
            android:id="@+id/CustomerHomeFragmentBeautyButton"
            android:layout_width="152dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="64dp"
            android:layout_weight="1"
            android:background="@color/purple_200"
            android:text="Beauty " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/CustomerHomeFragmentElectronicImageview"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/electronics" />

        <Button
            android:id="@+id/CustomerHomeFragmentElectronicandappliancesButton"
            android:layout_width="152dp"
            android:layout_height="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="64dp"
            android:layout_weight="1"
            android:background="@color/purple_200"
            android:text="ELELCTRONIC AND APPLIANCES" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/CustomerHomeFragmentTravelImageview"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bus" />

        <Button
            android:id="@+id/CustomerHomeFragmentTravelButton"
            android:layout_width="152dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="64dp"
            android:layout_weight="1"
            android:background="@color/purple_200"
            android:text="TRAVEL" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/CustomerHomeFragmentHomeserviceImageview"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/homeservice" />

        <Button
            android:id="@+id/CustomerHomeFragmentHomeserviceButton"
            android:layout_width="152dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="64dp"
            android:layout_weight="1"
            android:background="@color/purple_200"
            android:text="Home service" />
    </LinearLayout>
</LinearLayout>